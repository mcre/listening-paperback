#:kivy 2.0.0

<SWTreeViewLabel@TreeViewLabel>:
    on_touch_down: root.on_label_touch_down(self.text)

<SWTreeView@TreeView>:
    size_hint: (1, None)
    height: self.minimum_height
    hide_root: True

<SentencesWidget>:
    tv_all: tv_all
    tv_new: tv_new
    TabbedPanel:
        size: root.size
        pos: root.pos
        do_default_tab: False
        TabbedPanelItem:
            text: 'All'
            ScrollView:
                size: root.size
                pos: root.pos
                scroll_type: ['bars', 'content']
                SWTreeView:
                    id: tv_all
        TabbedPanelItem:
            text: 'New(' + str(root.new_count) + ')'
            ScrollView:
                size: root.size
                pos: root.pos
                scroll_type: ['bars', 'content']
                SWTreeView:
                    id: tv_new
