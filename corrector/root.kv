#:kivy 2.0.0
#:include images_viewer.kv
#:include voice.kv
#:include controller.kv
#:include texts.kv
#:include ime.kv
#:include ruby.kv
#:include sentences.kv

<RootWidget>:
    markers_widget: markers_widget
    pages_widget: pages_widget
    voice_widget: voice_widget
    controller_widget: controller_widget
    texts_widget: texts_widget
    ime_widget: ime_widget
    ruby_widget: ruby_widget
    sentences_widget: sentences_widget
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: 'horizontal'
        BoxLayout:
            size_hint_x: 0.4
            orientation: 'vertical'
            SentencesWidget:
                id: sentences_widget
        BoxLayout:
            orientation: 'vertical'
            VoiceWidget:
                id: voice_widget
                size_hint_y: 0.15
            TextsWidget:
                id: texts_widget
            ImeWidget:
                id: ime_widget
                size_hint_y: 0.08
            RubyWidget:
                id: ruby_widget
                size_hint_y: 0.5
            ControllerWidget:
                id: controller_widget
                size_hint_y: 0.1
        BoxLayout:
            orientation: 'vertical'
            MarkersWidget:
                id: markers_widget
                size_hint_y: 0.6
            PagesWidget:
                id: pages_widget