#:kivy 2.0.0

<TWTextInput@TextInput>:
    readonly: True

<TextsWidget>:
    plain_text_box: plain_text_box
    ssml_box: ssml_box
    TabbedPanel:
        size: root.size
        pos: root.pos
        do_default_tab: False
        TabbedPanelItem:
            text: 'Plain'
            TWTextInput:
                id: plain_text_box
                on_touch_up: root.on_touch_up_box(self.selection_from, self.selection_to, self.selection_text)
        TabbedPanelItem:
            text: 'SSML'
            TWTextInput:
                id: ssml_box
