#:kivy 2.0.0

<TWButton@Button>:

<TWTextInput@TextInput>:
    readonly: True
    unfocus_on_touch: False

<TextsWidget>:
    plain_text_box: plain_text_box
    ssml_box: ssml_box
    diff_box: diff_box
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: 'vertical'
        TWTextInput:
            id: plain_text_box
            on_touch_up: root.on_touch_up_box(self.selection_from, self.selection_to, self.selection_text)
        TWTextInput:
            id: ssml_box
            on_touch_up: root.on_touch_up_ssml_box(self.selection_text)
        TWTextInput:
            id: diff_box
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: 0.15
            TWButton:
                text: '〈 前検索'
                on_release: root.on_find_prev_button()
            TWButton:
                text: '次検索 〉'
                on_release: root.on_find_next_button()

